rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Photo libraries: lectura pública, escritura/eliminación solo admin
    match /photo-libraries/{contractId}/{fileName=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
      allow delete: if request.auth != null && request.auth.token.email == "wildpicturesstudio@gmail.com";
    }

    // Bloquear todo lo demás por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
